function _init()
	p = {
		x = 7 * 8,
		y = 11 * 8,
		speed = 1,
		flipped = false
	}
	truck = {
		x = 3*8,
		y = 5 * 8,
		w = 7,
		h = 8
	}
	truck.grid = create_truck_grid()
end

function _update60()
	move_player()
	interact_with_button()
	drop_shape()
end

function _draw()
	cls()
	camera(p.x - 60, p.y - 60)
	map(0, 0, 0, 0, 24, 24)

 -- dessin du camion
 for row = 1, #(truck.grid) do 
		for column = 1, #(truck.grid[row]) do
		 if truck.grid[row][column] == false then
			 spr(2, truck.x + column *8 - 8, truck.y + row *8 - 8)
			else
				spr(0, truck.x + column *8 - 8, truck.y + row *8 - 8)
			end
		end
	end
	
	-- dessin du joueur
	palt(11, true)
	palt(0, false)	
	spr(1, p.x, p.y, 1, 1, p.flipped)
	
	if p.holding_shape then
		draw_placeholder(p.x, p.y, p.holding_shape)
	end
	
	if can_interact(p.x / 8, p.y / 8) then
		print("❎", p.x, p.y - 8, 7)
	end
end

function draw_placeholder(x, y, shape)
	local x, y = placeholder_offset(x, y, shape)
	local dx, dy = flr(truck.x / 8) - 1, flr(truck.y / 8) - 1
	
	for row = 1, #shape do
		for column = 1, #(shape[row]) do
			if truck.grid[row + y] and truck.grid[row + y][column + x] == false and shape[row][column] == true then
				draw_rect((x + column + dx) * 8, (y + row + dy) * 8, 8, 8, 10)		
			elseif shape[row][column] == true then
				draw_rect((x + column + dx) * 8, (y + row + dy) * 8, 8, 8, 8)	
			end
		end
	end
end

function draw_rect(x, y, w, h, clr)
	rect(x, y, x+w, y+h, clr)
end

function fill_rect(x, y, w, h, clr)
	rectfill(x, y, x+w, y+h, clr)
end
