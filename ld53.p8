version 38
__lua__
function _init()
	p = {
		x = 7 * 8,
		y = 11 * 8,
		speed = 1,
		flipped = false
	}
end

function _update60()
	move_player()
end

function _draw()
	cls()
	camera(p.x - 60, p.y - 60)
	map(0, 0, 0, 0, 17, 17)

	-- dessin du joueur
	palt(11, true)
	palt(0, false)	
	spr(1, p.x, p.y, 1, 1, p.flipped)
end
-->8
-- player

function move_player()
 local dx, dy = p.x, p.y
 
	if (btn(⬆️)) dy -= p.speed
	if (btn(⬇️)) dy += p.speed
	if (btn(⬅️)) then
		dx -= p.speed
		p.flipped = true
	end
	if (btn(➡️)) then
		dx += p.speed
		p.flipped = false
	end
	
	if (is_colliding(dx, p.y)) dx = p.x
	if (is_colliding(p.x, dy)) dy = p.y

	p.x = dx
	p.y = dy  
end
