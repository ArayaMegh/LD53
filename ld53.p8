-- utils

function is_colliding(x, y)
	return is_collidable(mget(x / 8, (y + 7) / 8))
					or is_collidable(mget((x + 7) / 8, (y + 7) / 8))
					or is_collidable(mget((x + 7) / 8, y / 8))
					or is_collidable(mget((x / 8), y / 8))
end

function is_collidable(tile)
	return fget(tile, 0)
end
