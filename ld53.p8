-- truck

function create_truck_grid()
	local grid = {}
	for row = 1, truck.h do 
		grid[row] = {}
		for column = 1, truck.w do
			grid[row][column] = false
		end
	end
	return grid
end

function add_shape_to_grid(x, y, shape)
	for row = 1, #(shape) do
    for column = 1, #(shape[row]) do
    		if shape[row][column] == true then
		     	truck.grid[row + y][column + x] = shape[row][column]
    		end
    end 
  end
end


